---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Photography";
const destinations = await getCollection("destinations");
---

<BaseLayout pageTitle={pageTitle}>
    <ul class="ps-0">
        <div class="row">
            {
                destinations.map(destination => (
                    <li class="col-sm-6 col-md-4 col-lg-3">
                        <a href={`/destinations/${destination.slug}`}>
                            <div class="thumbnail d-flex justify-content-center align-items-center mb-4">
                                <img src={destination.data.thumbnail.url} class="img-fluid" alt={destination.data.thumbnail.alt} />
                                <h2>{destination.data.title}</h2>
                            </div>
                        </a>
                    </li>
                ))
            }
        </div>
    </ul>
</BaseLayout>

<style>
    li {
        list-style-type: none;
    }

    .thumbnail img {
        aspect-ratio: 1/1;
        object-fit: cover;
    }

    .thumbnail {
        position: relative;
        background-color: #000000;
    }

    .thumbnail img {
        opacity: 0.5;
    }

    .thumbnail h2 {
        position: absolute;
        color: #ffffff;
    }
</style>
